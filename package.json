{
  "name": "biosentiers-server",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "apidoc": "apidoc -i server/api -o doc/api",
    "apidoc:watch": "onchange server/api/**/*.js -- npm run apidoc",
    "dev": "concurrently \"npm run apidoc:watch\" \"npm run lint:watch\" \"npm run dev:server\"",
    "dev:server": "nodemon",
    "lint": "jshint --reporter=node_modules/jshint-stylish .",
    "lint:watch": "onchange **/*.js -e doc/**/*.js -- npm run lint",
    "migrate": "knex migrate:latest",
    "migrate:test": "NODE_ENV=test knex migrate:latest",
    "start": "node ./bin/www",
    "test": "NODE_ENV=test mocha server/**/*.spec.js"
  },
  "dependencies": {
    "bcryptjs": "^2.3.0",
    "bluebird": "^3.4.6",
    "body-parser": "~1.15.1",
    "bookshelf": "^0.10.2",
    "composable-middleware": "^0.3.0",
    "express": "^4.14.0",
    "express-jwt": "^5.0.0",
    "inflection": "^1.10.0",
    "jsonwebtoken": "^7.1.9",
    "knex": "^0.12.1",
    "lodash": "^4.15.0",
    "log4js": "^1.0.1",
    "nodemailer": "^2.6.4",
    "nodemailer-smtp-transport": "^2.7.2",
    "passport": "^0.3.2",
    "passport-local": "^1.0.0",
    "pg": "^6.1.0",
    "pug": "^2.0.0-beta6",
    "qs": "^6.3.0",
    "serve-favicon": "~2.3.0",
    "uuid": "^3.0.0",
    "valdsl": "^0.1.1",
    "valib": "^2.0.0"
  },
  "devDependencies": {
    "apidoc": "^0.17.5",
    "chai": "^3.5.0",
    "chai-moment": "^0.1.0",
    "concurrently": "^3.3.0",
    "http-status": "^0.2.3",
    "jshint": "^2.9.3",
    "jshint-stylish": "^2.2.1",
    "mocha": "^3.1.0",
    "moment": "^2.17.1",
    "onchange": "^3.2.1",
    "supertest": "^2.0.0",
    "supertest-as-promised": "^4.0.0"
  }
}
