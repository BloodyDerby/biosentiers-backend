{
  "name": "biosentiers-server",
  "version": "0.1.1",
  "private": true,
  "scripts": {
    "apidoc": "npm run apidoc:clean && npm run apidoc:build && concurrently \"npm run apidoc:watch\" \"npm run apidoc:serve\"",
    "apidoc:build": "apidoc -i server/api -o doc/api",
    "apidoc:clean": "rimraf doc/api",
    "apidoc:serve": "node lib/serve-apidoc.js",
    "apidoc:watch": "onchange server/api/**/*.js -- npm run apidoc:build",
    "dev": "npm run lint && concurrently \"npm run server\" \"npm run apidoc\" \"npm run lint:watch\"",
    "doctoc": "doctoc --notitle --github README.md",
    "lint": "jshint --reporter=node_modules/jshint-stylish .",
    "lint:watch": "onchange bin/www knexfile.js config/**/*.js lib/**/*.js migrations/**/*.js server/**/*.js -e doc/**/*.js -- npm run lint",
    "migrate": "knex migrate:latest",
    "migrate:test": "NODE_ENV=test knex migrate:latest",
    "server": "nodemon",
    "start": "node ./bin/www",
    "test": "NODE_ENV=test mocha server/**/*.spec.js"
  },
  "dependencies": {
    "bcryptjs": "^2.3.0",
    "bluebird": "^3.4.6",
    "body-parser": "~1.15.1",
    "bookshelf": "^0.10.2",
    "composable-middleware": "^0.3.0",
    "dotenv": "^4.0.0",
    "express": "^4.14.0",
    "express-jwt": "^5.0.0",
    "inflection": "^1.10.0",
    "is-generator": "^1.0.3",
    "jsonwebtoken": "^7.1.9",
    "knex": "^0.12.1",
    "knex-postgis": "^0.2.2",
    "lodash": "^4.15.0",
    "log4js": "^1.0.1",
    "moment": "^2.17.1",
    "nodemailer": "^2.6.4",
    "nodemailer-smtp-transport": "^2.7.2",
    "passport": "^0.3.2",
    "passport-local": "^1.0.0",
    "pg": "^6.1.0",
    "pug": "^2.0.0-beta6",
    "qs": "^6.3.0",
    "randomstring": "^1.1.5",
    "uuid": "^3.0.0",
    "valdsl": "^0.3.0",
    "valib": "^2.0.0"
  },
  "devDependencies": {
    "apidoc": "^0.17.5",
    "chai": "^3.5.0",
    "chai-moment": "^0.1.0",
    "chance": "^1.0.10",
    "concurrently": "^3.3.0",
    "doctoc": "^1.2.0",
    "http-status": "^0.2.3",
    "jshint": "^2.9.3",
    "jshint-stylish": "^2.2.1",
    "live-server": "^1.2.0",
    "mocha": "^3.1.0",
    "onchange": "^3.2.1",
    "rimraf": "^2.5.4",
    "supertest": "^2.0.0",
    "supertest-as-promised": "^4.0.0"
  },
  "engines": {
    "node": ">= 6.0.0"
  }
}
